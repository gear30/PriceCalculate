@model PriceCalculator.Model.PriceRequest
@{
    ViewData["Title"] = "Home Page";
}
<form>
    <div class="form-horizontal">
        <div class="text-danger" />
        <div class="form-group">
            <label class="control-label col-md-2">Customer Count</label>
            <div class="col-md-10">
                <input class="form-control" type="text" data-val="true" data-val-number="The field Customer Count must be a number." data-val-required="The Customer Count field is required." id="CustomerCount" name="CustomerCount" value="1" />
                <span class="text-danger field-validation-valid" data-valmsg-for="CustomerCount" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">PricePer Customer</label>
            <div class="col-md-10">
                <input class="form-control" type="text" data-val="true" data-val-number="The field Price Per Customer must be a number." data-val-required="The Price Per Customer field is required." id="PricePerCustomer" name="PricePerCustomer" value="100" />
                <span class="text-danger field-validation-valid" data-valmsg-for="PricePerCustomer" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Discount Code</label>
            <div class="col-md-10">
                <input class="form-control" type="text" data-val="true" data-val-required="The field Discount Code if no value please in put NONE" id="DiscountCode" name="DiscountCode" value="NONE" />
                <span class="text-danger field-validation-valid" data-valmsg-for="Price" data-valmsg-replace="true"></span>
            </div>
        </div>
        <!-- Markup removed for brevity -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Price" class="btn btn-default" asp-action="PriceCal" />
            </div>
        </div>
    </div>
</form>